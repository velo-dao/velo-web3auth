{
   "compilerOptions": {
      "baseUrl": ".",
      "rootDir": "src",
      "strictNullChecks": true,
      "module": "ESNext",
      "skipLibCheck": true,
      "esModuleInterop": true,
      "target": "ESNext",
      "lib": [
         "ESNext",
         "DOM"
      ],
      "sourceMap": false,
      "isolatedModules": true,
      "allowJs": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "declaration": false,
      "declarationMap": false
   },
   "include": [
      "src/**/*",
      "../rollup.config.ts"
   ],
   "exclude": [
      "node_modules/**/*",
      "dist/**/*"
   ]
}