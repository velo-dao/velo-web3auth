{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "src",
    "strictNullChecks": true,
    "module": "ES2022",
    "skipLibCheck": true,
    "emitDeclarationOnly": false,
    "declaration": true,
    "esModuleInterop": true,
    "target": "ES2022",
    "lib": [
      "ES2022",
      "DOM"
    ],
    "sourceMap": true,
    "isolatedModules": true,
    "allowJs": true,
    "downlevelIteration": false,
    "moduleResolution": "bundler",
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}